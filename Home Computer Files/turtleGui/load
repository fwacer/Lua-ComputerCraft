mon = peripheral.wrap("top")
      mon.clear()
      mon.setCursorPos(1,1)
      sleep(0.5)
      for i=1,3 do
        mon.write(".")
        sleep(0.5)
      end
      mon.setCursorPos(1,1)
      mon.clear()
      mon.write("..")
      sleep(0.5)
      mon.clear()
      mon.setCursorPos(1,1)
      mon.write(".")
      sleep(0.5)
mon.clear()
mon.setCursorPos(1,1)
